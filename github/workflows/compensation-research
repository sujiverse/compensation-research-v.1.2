name: Compensation Research Automation

on:
  schedule:
    # 10분마다 실행 (실제로는 5분이 최소 간격)
    - cron: '*/5 * * * *'
  workflow_dispatch:
    # 수동 실행 가능
  push:
    branches: [ main ]

jobs:
  research-cycle:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        token: ${{ secrets.GITHUB_TOKEN }}

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install requests unidecode schedule

    - name: Run compensation research cycle
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      run: |
        python compensation_research_system.py --single

    - name: Configure Git
      run: |
        git config --local user.email "action@github.com"
        git config --local user.name "GitHub Action"

    - name: Commit and push changes
      run: |
        git add -A
        if [ -n "$(git status --porcelain)" ]; then
          git commit -m "🔬 Automated compensation research update - $(date '+%Y-%m-%d %H:%M UTC')"
          git push
        else
          echo "No changes to commit"
        fi

    - name: Upload Obsidian vault as artifact
      uses: actions/upload-artifact@v3
      with:
        name: compensation-vault-$(date +%Y%m%d-%H%M)
        path: Compensation-Research-Vault/
        retention-days: 30
