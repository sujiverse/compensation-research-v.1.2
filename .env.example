# ðŸ”¬ Compensation Research System - Environment Configuration
# Copy this file to .env and configure your values

# =================== CORE SYSTEM ===================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Application Settings
RESEARCH_CYCLE_INTERVAL=600  # 10 minutes in seconds
MAX_PAPERS_PER_CYCLE=5
VAULT_PATH=Compensation-Research-Vault

# =================== API KEYS ===================
# OpenAI API (Optional - for enhanced analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Research Configuration (JSON string)
RESEARCH_CONFIG={"quality_threshold": 8.0, "max_depth": 5}

# =================== DATABASE ===================
# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=compensation_db
POSTGRES_USER=research
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_URL=postgresql://research:password@localhost:5432/compensation_db

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://localhost:6379/0

# =================== MONITORING ===================
# Prometheus Metrics
PROMETHEUS_PORT=8080
METRICS_ENDPOINT=/metrics

# Health Check Settings
HEALTH_CHECK_INTERVAL=300  # 5 minutes
HEALTH_CHECK_TIMEOUT=30

# =================== NOTIFICATIONS ===================
# Slack Integration
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#research-alerts
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Discord Integration
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
DISCORD_CHANNEL_ID=your_discord_channel_id

# Microsoft Teams
TEAMS_WEBHOOK=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_RECIPIENTS=admin@yourdomain.com,researcher@yourdomain.com

# =================== CLOUD STORAGE ===================
# AWS S3 Backup
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
BACKUP_BUCKET=compensation-research-backups

# Google Cloud Storage (Alternative)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_BUCKET=compensation-research-gcs

# Azure Blob Storage (Alternative)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER=compensation-research

# =================== SECURITY ===================
# Encryption Keys
SECRET_KEY=your_super_secret_key_here_min_32_chars
ENCRYPTION_KEY=your_fernet_encryption_key_here

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Authentication (if implementing web interface)
JWT_SECRET=your_jwt_secret_key
SESSION_TIMEOUT=3600  # 1 hour

# =================== GITHUB INTEGRATION ===================
# GitHub API
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_REPOSITORY=username/compensation-research
GITHUB_BRANCH=main

# GitHub Actions
ACTIONS_TOKEN=your_github_actions_token

# =================== RESEARCH CUSTOMIZATION ===================
# Paper Filtering
MIN_QUALITY_SCORE=6.0
MIN_CITATION_COUNT=1
MAX_PUBLICATION_AGE_YEARS=15

# 5WHY Analysis
WHY_DEPTH_TARGET=5
MIN_WHY_COMPLETENESS=0.8

# Node Connections
CONNECTION_STRENGTH_THRESHOLD=0.5
MAX_CONNECTIONS_PER_NODE=20

# Obsidian Vault
VAULT_BACKUP_INTERVAL=86400  # 24 hours
VAULT_COMPRESSION=true

# =================== PERFORMANCE ===================
# Caching
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Concurrency
MAX_WORKERS=4
PARALLEL_PROCESSING=true

# Memory Management
MAX_MEMORY_USAGE_MB=2048
GARBAGE_COLLECTION_INTERVAL=300

# =================== DEVELOPMENT ===================
# Development Mode Settings
DEV_MODE=false
DEV_MOCK_API=false
DEV_SAMPLE_DATA=false

# Testing
TEST_DATABASE_URL=sqlite:///test_compensation.db
TEST_VAULT_PATH=test-vault

# =================== FEATURE FLAGS ===================
# Enable/Disable Features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=true
ENABLE_DISCORD_NOTIFICATIONS=false
ENABLE_BACKUP_TO_CLOUD=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_SCANNING=true
ENABLE_AUTO_CLEANUP=true

# Experimental Features
ENABLE_AI_ENHANCED_ANALYSIS=false
ENABLE_MULTI_LANGUAGE_SUPPORT=false
ENABLE_REAL_TIME_COLLABORATION=false

# =================== LOGGING ===================
# Log Configuration
LOG_FORMAT=json
LOG_FILE_PATH=logs/compensation_research.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Log Levels by Component
LOG_LEVEL_PAPER_SCREENER=INFO
LOG_LEVEL_WHY_ANALYZER=INFO
LOG_LEVEL_NODE_CONNECTOR=INFO
LOG_LEVEL_OBSIDIAN_GENERATOR=INFO

# =================== TIMEZONE ===================
# System Timezone
TIMEZONE=UTC
LOCALIZATION=en_US

# =================== CUSTOM SETTINGS ===================
# Institution-specific settings
INSTITUTION_NAME=Your Research Institution
RESEARCH_FOCUS_AREAS=hip,knee,ankle,spine
PREFERRED_JOURNALS=Physical Therapy,JOSPT,Clinical Biomechanics

# Custom API Endpoints
CUSTOM_API_ENDPOINT=https://api.yourinstitution.edu
CUSTOM_API_KEY=your_custom_api_key

# =================== NOTES ===================
# Configuration Notes:
# 1. Never commit .env file to version control
# 2. Use strong passwords and rotate them regularly
# 3. Limit API key permissions to minimum required
# 4. Monitor usage of external services for billing
# 5. Test configuration in staging environment first